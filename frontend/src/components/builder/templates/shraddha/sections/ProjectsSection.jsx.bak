import { useState } from "react";
import { FolderKanban, ExternalLink } from "lucide-react";
import { cn } from "../../../../../lib/utils";
import {
  EditableText,
  ItemToolbar,
  BulletEditor,
  EmptyState,
} from "../../../shared";
import useBuildStore from "../../../../../store/Build.store";
import SectionHeader from "./SectionHeader";

/**
 * Projects Section for Shraddha template
 * Lists projects with description, technologies, and bullets
 */
export default function ProjectsSection({
  data = [],
  sectionId,
  settings = {},
}) {
  const updateSectionData = useBuildStore((state) => state.updateSectionData);
  const setConfirmDialog = useBuildStore((state) => state.setConfirmDialog);

  const [hoveredItemId, setHoveredItemId] = useState(null);

  // Merge with defaults
  const sectionSettings = {
    showTechnologies: true,
    showLink: true,
    showPeriod: false,
    showBullets: true,
    ...settings,
  };

  const handleFieldChange = (itemId, field, value) => {
    const updatedData = data.map((item) =>
      item.id === itemId ? { ...item, [field]: value } : item
    );
    updateSectionData("projects", updatedData);
  };

  const handleAddItem = () => {
    const newItem = {
      id: `proj-${Date.now()}`,
      name: "",
      description: "",
      technologies: [],
      link: "",
      bullets: [""],
    };
    updateSectionData("projects", [...data, newItem]);
  };

  const handleDeleteItem = (itemId) => {
    setConfirmDialog?.({
      isOpen: true,
      title: "Delete Project",
      message: "Are you sure you want to delete this project?",
      onConfirm: () => {
        updateSectionData(
          "projects",
          data.filter((item) => item.id !== itemId)
        );
        setConfirmDialog?.({ isOpen: false });
      },
      onCancel: () => setConfirmDialog?.({ isOpen: false }),
    });
  };

  const handleTechChange = (itemId, techString) => {
    const technologies = techString
      .split(",")
      .map((t) => t.trim())
      .filter(Boolean);
    handleFieldChange(itemId, "technologies", technologies);
  };

  if (!data || data.length === 0) {
    return (
      <div className="mb-4">
        <SectionHeader title="Projects" />
        <EmptyState
          title="No projects added"
          description="Click to add your projects"
          onAdd={handleAddItem}
          icon={FolderKanban}
        />
      </div>
    );
  }

  return (
    <div className="mb-4">
      <SectionHeader title="Projects" />

      <div className="space-y-4">
        {data.map((item) => (
          <div
            key={item.id}
            className="relative group"
            onMouseEnter={() => setHoveredItemId(item.id)}
            onMouseLeave={() => setHoveredItemId(null)}
          >
            {/* Hover Toolbar */}
            {hoveredItemId === item.id && (
              <ItemToolbar
                position="left"
                showAddEntry={true}
                showCalendar={false}
                onAddEntry={handleAddItem}
                onDelete={() => handleDeleteItem(item.id)}
              />
            )}

            {/* Project Entry */}
            <div>
              {/* Name and Link */}
              <div className="flex items-center gap-2">
                <EditableText
                  value={item.name}
                  onChange={(val) => handleFieldChange(item.id, "name", val)}
                  placeholder="Project Name"
                  className="font-semibold text-gray-900"
                  as="h3"
                />
                {sectionSettings.showLink && item.link && (
                  <a
                    href={
                      item.link.startsWith("http")
                        ? item.link
                        : `https://${item.link}`
                    }
                    target="_blank"
                    rel="noopener noreferrer"
                    className="text-blue-600 hover:text-blue-700"
                  >
                    <ExternalLink className="w-3.5 h-3.5" />
                  </a>
                )}
              </div>

              {/* Description */}
              <EditableText
                value={item.description}
                onChange={(val) =>
                  handleFieldChange(item.id, "description", val)
                }
                placeholder="Brief project description..."
                className="text-sm text-gray-600"
                as="p"
              />

              {/* Technologies */}
              {sectionSettings.showTechnologies && (
                <div className="flex flex-wrap gap-1 mt-1">
                  {(item.technologies || []).map((tech, idx) => (
                    <span
                      key={idx}
                      className="px-2 py-0.5 text-xs bg-gray-100 text-gray-700 rounded"
                    >
                      {tech}
                    </span>
                  ))}
                  <EditableText
                    value={(item.technologies || []).join(", ")}
                    onChange={(val) => handleTechChange(item.id, val)}
                    placeholder="Add technologies (comma separated)"
                    className="text-xs text-gray-500 italic"
                    as="span"
                  />
                </div>
              )}

              {/* Link Input */}
              {sectionSettings.showLink && (
                <div className="mt-1">
                  <EditableText
                    value={item.link}
                    onChange={(val) => handleFieldChange(item.id, "link", val)}
                    placeholder="Project URL"
                    className="text-xs text-blue-600"
                    as="span"
                  />
                </div>
              )}

              {/* Bullets */}
              {sectionSettings.showBullets && (
                <BulletEditor
                  bullets={item.bullets || []}
                  onChange={(bullets) =>
                    handleFieldChange(item.id, "bullets", bullets)
                  }
                  className="mt-2"
                  placeholder="Add project detail..."
                />
              )}
            </div>
          </div>
        ))}
      </div>

      {/* Add More Button */}
      <button
        onClick={handleAddItem}
        className="mt-2 text-sm text-blue-600 hover:text-blue-700 hover:underline"
      >
        + Add Project
      </button>
    </div>
  );
}
