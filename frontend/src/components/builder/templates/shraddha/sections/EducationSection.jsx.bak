import { useState } from "react";
import { GraduationCap, Settings } from "lucide-react";
import { cn } from "../../../../../lib/utils";
import {
  EditableText,
  ItemToolbar,
  BulletEditor,
  EmptyState,
  MonthYearPicker,
  SectionSettings,
  EDUCATION_SETTINGS,
} from "../../../shared";
import useBuildStore from "../../../../../store/Build.store";
import SectionHeader from "./SectionHeader";

/**
 * Education Section for Shraddha template
 * Lists education entries with institution, degree, dates
 */
export default function EducationSection({
  data = [],
  sectionId,
  settings = {},
}) {
  const updateSectionData = useBuildStore((state) => state.updateSectionData);
  const addItemToSection = useBuildStore((state) => state.addItemToSection);
  const removeItemFromSection = useBuildStore(
    (state) => state.removeItemFromSection
  );
  const updateSectionSettings = useBuildStore(
    (state) => state.updateSectionSettings
  );
  const setConfirmDialog = useBuildStore((state) => state.setConfirmDialog);

  const [hoveredItemId, setHoveredItemId] = useState(null);
  const [calendarOpen, setCalendarOpen] = useState(null);
  const [settingsOpen, setSettingsOpen] = useState(false);

  // Merge with defaults
  const sectionSettings = {
    showGPA: true,
    showInstitution: true,
    showLocation: true,
    showPeriod: true,
    showBullets: false,
    ...settings,
  };

  const handleFieldChange = (itemId, field, value) => {
    const updatedData = data.map((item) =>
      item.id === itemId ? { ...item, [field]: value } : item
    );
    updateSectionData("education", updatedData);
  };

  const handleAddItem = () => {
    const newItem = {
      id: `edu-${Date.now()}`,
      institution: "",
      degree: "",
      field: "",
      location: "",
      startDate: null,
      endDate: null,
      gpa: "",
      bullets: [],
    };
    addItemToSection?.("education", newItem) ||
      updateSectionData("education", [...data, newItem]);
  };

  const handleDeleteItem = (itemId) => {
    setConfirmDialog?.({
      isOpen: true,
      title: "Delete Education Entry",
      message: "Are you sure you want to delete this education entry?",
      onConfirm: () => {
        removeItemFromSection?.("education", itemId) ||
          updateSectionData(
            "education",
            data.filter((item) => item.id !== itemId)
          );
        setConfirmDialog?.({ isOpen: false });
      },
      onCancel: () => setConfirmDialog?.({ isOpen: false }),
    });
  };

  const handleDateChange = (itemId, dates) => {
    handleFieldChange(itemId, "startDate", dates.from);
    handleFieldChange(itemId, "endDate", dates.to);
    setCalendarOpen(null);
  };

  const handleSettingsChange = (key, value) => {
    updateSectionSettings?.("education", { ...sectionSettings, [key]: value });
  };

  const formatDate = (date) => {
    if (!date) return "";
    if (date === "Present") return "Present";

    const months = [
      "Jan",
      "Feb",
      "Mar",
      "Apr",
      "May",
      "Jun",
      "Jul",
      "Aug",
      "Sep",
      "Oct",
      "Nov",
      "Dec",
    ];

    // Handle object format { month: 0, year: 2024 }
    if (
      typeof date === "object" &&
      date.month !== undefined &&
      date.year !== undefined
    ) {
      return `${months[date.month]} ${date.year}`;
    }

    // Handle string format "MM/YYYY" or already formatted
    if (typeof date === "string") {
      // Already formatted like "Jan 2024"
      if (months.some((m) => date.startsWith(m))) {
        return date;
      }
      // Parse MM/YYYY format
      const parts = date.split("/");
      if (parts.length === 2) {
        const monthNum = parseInt(parts[0], 10) - 1;
        const year = parts[1];
        if (monthNum >= 0 && monthNum < 12) {
          return `${months[monthNum]} ${year}`;
        }
      }
      return date; // Return as-is if can't parse
    }

    return "";
  };

  if (!data || data.length === 0) {
    return (
      <div className="mb-4">
        <SectionHeader title="Education" />
        <EmptyState
          title="No education added"
          description="Click to add your educational background"
          onAdd={handleAddItem}
          icon={GraduationCap}
        />
      </div>
    );
  }

  return (
    <div className="mb-4 relative">
      <div className="flex items-center justify-between">
        <SectionHeader title="Education" />
        <button
          onClick={() => setSettingsOpen(!settingsOpen)}
          className="p-1 rounded hover:bg-gray-100 opacity-0 group-hover:opacity-100 transition-opacity"
        >
          <Settings className="w-4 h-4 text-gray-500" />
        </button>
      </div>

      {/* Settings Panel */}
      <SectionSettings
        isOpen={settingsOpen}
        title="Education Settings"
        settings={EDUCATION_SETTINGS.map((s) => ({
          ...s,
          value: sectionSettings[s.key] ?? s.value,
        }))}
        onChange={handleSettingsChange}
        onClose={() => setSettingsOpen(false)}
      />

      <div className="space-y-3">
        {data.map((item) => (
          <div
            key={item.id}
            className="relative group"
            onMouseEnter={() => setHoveredItemId(item.id)}
            onMouseLeave={() => setHoveredItemId(null)}
          >
            {/* Hover Toolbar */}
            {hoveredItemId === item.id && (
              <ItemToolbar
                position="left"
                showAddEntry={true}
                showCalendar={sectionSettings.showPeriod}
                showSettings={false}
                onAddEntry={handleAddItem}
                onOpenCalendar={() => setCalendarOpen(item.id)}
                onDelete={() => handleDeleteItem(item.id)}
              />
            )}

            {/* Date Picker */}
            {calendarOpen === item.id && (
              <div className="absolute left-0 top-full z-50 mt-1">
                <MonthYearPicker
                  value={{ from: item.startDate, to: item.endDate }}
                  onChange={(dates) => handleDateChange(item.id, dates)}
                  onClose={() => setCalendarOpen(null)}
                />
              </div>
            )}

            {/* Education Entry */}
            <div className="flex justify-between items-start">
              <div className="flex-1">
                {/* Degree and Field */}
                <div className="flex items-baseline gap-2">
                  <EditableText
                    value={item.degree}
                    onChange={(val) =>
                      handleFieldChange(item.id, "degree", val)
                    }
                    placeholder="Degree"
                    className="font-semibold text-gray-900"
                    as="span"
                  />
                  {item.field && (
                    <>
                      <span className="text-gray-500">in</span>
                      <EditableText
                        value={item.field}
                        onChange={(val) =>
                          handleFieldChange(item.id, "field", val)
                        }
                        placeholder="Field of Study"
                        className="text-gray-900"
                        as="span"
                      />
                    </>
                  )}
                </div>

                {/* Institution and Location */}
                <div className="flex items-center gap-2 text-sm text-gray-600">
                  {sectionSettings.showInstitution && (
                    <EditableText
                      value={item.institution}
                      onChange={(val) =>
                        handleFieldChange(item.id, "institution", val)
                      }
                      placeholder="Institution Name"
                      className="text-sm"
                      as="span"
                    />
                  )}
                  {sectionSettings.showLocation && item.location && (
                    <>
                      <span className="text-gray-400">|</span>
                      <EditableText
                        value={item.location}
                        onChange={(val) =>
                          handleFieldChange(item.id, "location", val)
                        }
                        placeholder="Location"
                        className="text-sm"
                        as="span"
                      />
                    </>
                  )}
                </div>

                {/* GPA */}
                {sectionSettings.showGPA && item.gpa && (
                  <div className="text-sm text-gray-600 mt-0.5">
                    <span className="text-gray-500">GPA: </span>
                    <EditableText
                      value={item.gpa}
                      onChange={(val) => handleFieldChange(item.id, "gpa", val)}
                      placeholder="GPA"
                      className="text-sm"
                      as="span"
                    />
                  </div>
                )}

                {/* Bullets */}
                {sectionSettings.showBullets &&
                  item.bullets &&
                  item.bullets.length > 0 && (
                    <BulletEditor
                      bullets={item.bullets}
                      onChange={(bullets) =>
                        handleFieldChange(item.id, "bullets", bullets)
                      }
                      className="mt-1"
                    />
                  )}
              </div>

              {/* Date Range */}
              {sectionSettings.showPeriod && (
                <div className="text-sm text-gray-600 whitespace-nowrap">
                  {formatDate(item.startDate)} - {formatDate(item.endDate)}
                </div>
              )}
            </div>
          </div>
        ))}
      </div>

      {/* Add More Button */}
      <button
        onClick={handleAddItem}
        className="mt-2 text-sm text-blue-600 hover:text-blue-700 hover:underline"
      >
        + Add Education
      </button>
    </div>
  );
}
