<?xml version="1.0" encoding="utf-8"?>
<!--
  Azure App Service web.config for Node.js applications
  This file configures IIS to host the Node.js backend application
-->
<configuration>
  <system.webServer>
    
    <!-- Ensure URL rewriting is enabled -->
    <webSocket enabled="false" />
    
    <handlers>
      <!-- Tells IIS to use iisnode for .js files -->
      <add name="iisnode" path="dist/server.js" verb="*" modules="iisnode"/>
    </handlers>
    
    <!-- Rewrite all requests to the Node.js application entry point -->
    <rewrite>
      <rules>
        <!-- Exclude static files and folders if any -->
        <rule name="StaticContent">
          <action type="Rewrite" url="public{REQUEST_URI}"/>
        </rule>
        
        <!-- All other URLs go to the Node.js server -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="dist/server.js"/>
        </rule>
        
        <!-- Health check endpoints must reach the server -->
        <rule name="HealthCheck" stopProcessing="true">
          <match url="^api/v1/(health|ready|live)$" />
          <action type="Rewrite" url="dist/server.js" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <remove name="X-Powered-By" />
        <add name="X-Content-Type-Options" value="nosniff" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Error handling -->
    <httpErrors existingResponse="PassThrough" />
    
    <!-- iisnode configuration -->
    <iisnode
      node_env="production"
      nodeProcessCommandLine="C:\Program Files\nodejs\node.exe"
      loggingEnabled="true"
      logDirectory="iisnode"
      debuggingEnabled="false"
      maxLogFileSizeInKB="128"
      maxTotalLogFileSizeInKB="1024"
      maxLogFiles="20"
      devErrorsEnabled="false"
      flushResponse="false"
      enableXFF="true"
      promoteServerVars="REMOTE_ADDR"
    />
    
  </system.webServer>
</configuration>
